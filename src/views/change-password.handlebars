<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Recupera tu cuenta</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f3e5f5;
      color: #4a148c;
    }

    .container {
      margin-top: 50px;
    }

    .card {
      border: none;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-body {
      padding: 30px;
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <a class="navbar-brand" href="#">
      <img src="/img/logo.PNG" alt="Logo" width="180" height="80" class="d-inline-block align-top">
    </a>
    <div class="navbar-center">Boris Gamer</div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/products">Tienda</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/login">Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/profile">Mi Perfil</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/chat">Chat</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/contact">Contáctanos</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/carts/{{user.Carrito}}">Carrito</a>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Recover Account Form -->
  <div class="container mt-4 mb-2">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h2 class="text-center mb-4">Restablece tu contraseña</h2>
            <form action="/api/users/change-password" method="POST">
              <div class="form-group">
                <label for="email">Correo electrónico:</label>
                <input type="email" name="email" class="form-control" required>
                {{#if errors.email}}
                <div class="error">{{errors.email}}</div>
                {{/if}}
              </div>
              <div class="form-group">
                <label for="token">Código de confirmación:</label>
                <input type="text" name="token" class="form-control" id="token" required>
                {{#if errors.token}}
                <div class="error">{{errors.token}}</div>
                {{/if}}
              </div>
              <div class="form-group">
                <label for="password">Nueva contraseña:</label>
                <input type="poassword" name="newPassword" class="form-control" id="password" required>
                {{#if errors.newPassword}}
                <div class="error">{{errors.newPassword}}</div>
                {{/if}}
              </div>
              <button type="submit" class="mt-4 btn btnprimary btn-block">Reestablecer</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>